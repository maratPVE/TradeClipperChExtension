{
  "name": "TradingView Journal",
  "version": "2.0.0",
  "manifest_version": 3,

  "description": "Ajoute un bouton Journal natif à TradingView qui ouvre un popup « Hello ».",

  "icons": {
    "16":  "icons/icon-16.png",
    "32":  "icons/icon-32.png",
    "48":  "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.tradingview.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon-16.png",
        "icons/icon-32.png",
        "icons/icon-48.png",
        "icons/icon-128.png"
      ],
      "matches": ["https://*.tradingview.com/*"]
    }
  ],

  "permissions": ["storage"]
}
